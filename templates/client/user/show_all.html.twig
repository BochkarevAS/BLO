{% extends 'base.html.twig' %}

{% block title %}Объявления{% endblock %}

{% block body %}

    <div class="container">

        <h4>Объявления</h4>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Название</th>
                    <th>Дата</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>
                            Шины
                            {% if post.brand %}
                                {{ post.brand.name }}
                            {% endif %}
                            {% if post.width %}
                                {{ post.width }}
                            {% endif %}
                            {% if post.height %}
                                / {{ post.height }}
                            {% endif %}
                            {% if post.diameter %}
                                / {{ post.diameter }}
                            {% endif %}
                            {% if post.model %}
                                {{ post.model.name }}
                            {% endif %}
                            <br>
                            {% if post.quantity %}
                                Комплект {{ post.quantity }} шт.
                            {% endif %}
                        </td>
                        <td>{{ post.updatedAt|date('d-m-Y H:i') }}</td>
                        <td>
                            <a href="{{ path('tyre_show', {'id': post.id}) }}" target="_blank">Показать</a>
                            <a href="{{ path('tyre_edit', {'id': post.id}) }}">Редактировать</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">Объявлений нет</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>

{% endblock %}