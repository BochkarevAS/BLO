{% extends 'base.html.twig' %}

{% block title %}Личный кабинет{% endblock %}

{% block body %}

    <div class="container">

        <div>
            <h4>Личный кабинет</h4>
        </div>

        <hr>

        <div class="row">
            <div class="col-4">
                <p><b>Профиль</b></p>
                <div class="card" style="width:300px">
                    <img class="card-img-top" src="/images/{{ user.avatar }}">
                    <div class="card-body text-center">
                        <h6 class="card-title">{{ user.firstName }}</h6>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="fa fa-envelope mr-3"></i>{{ user.username }}</li>
                        <li class="list-group-item"><i class="fa fa-phone mr-3"></i>{{ user.phone }}</li>
                        <li class="list-group-item"><i class="fa fa-home mr-3"></i>{{ user.city }}</li>
                    </ul>
                    <div class="card-body text-center">
                        <a href="{{ path('client_user_index', {'id': user.id}) }}" class="btn btn-primary">Редактировать профиль</a>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <p><b>Действия</b></p>
                <a href="{{ path('client_company_new') }}">Добавить компанию</a>
            </div>
            <div class="col-4">
                <p><b>Компании</b></p>
                <ul>
                    {% for company in companys %}
                        <li><a href="{{ path('client_company_edit', {'id': company.id}) }}">{{ company.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>

    </div>

{% endblock %}