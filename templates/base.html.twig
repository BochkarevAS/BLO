<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BIMBILO{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('build/layout.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-bg mb-5">

            <a style="margin-left: 75px;" href="{{ path('parts_index') }}">Запчасти</a>
            <a style="margin-left: 75px;" href="{{ path('tyres_index') }}">Шины</a>
            <a style="margin-left: 75px;" href="{{ path('drives_render') }}">Диски</a>
            <a style="margin-left: 75px;" href="{{ path('client_company_show_all') }}">Продавцы</a>

            {% if is_granted('ROLE_USER') %}
                <a style="margin-left: 75px;" href="{{ path('client_company_index') }}">Личный кабинет</a>
            {% endif %}

            {% if is_granted('ROLE_ADMIN') %}
                <a style="margin-left: 75px;" href="{{ path('admin') }}">Админка</a>
            {% endif %}

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown" style="margin-right: 75px;">
                        <div class="navbar-collapse collapse">

                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="drop-down" data-toggle="tooltip" data-placement="left" title="Добропожаловать ">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                            <span class="fa fa-user"></span>
                                                <strong>{{ app.user.username }}</strong>
                                            <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a href="{{ path('fos_user_security_logout') }}" class="dropdown-item">Выход<span class="mini-dumbbell"></span></a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            {% else %}
                                <ul class="nav navbar-nav navbar-right">
                                    <li>
                                        <a href="{{ path('fos_user_security_login') }}" class="dropdown"><span class="fa fa-sign-out"></span>Вход</a>
                                    </li>
                                    <li>
                                        <div class="col-1"><a href="{{ path('fos_user_registration_register') }}">Регистрация</a></div>
                                    </li>
                                </ul>
                            {% endif %}
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="main-content">
            {% for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        <footer class="footer">
            <hr />
            <p>{{ ''|date('Y') }}</p>
        </footer>

        {% block javascripts %}
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
            <script src="{{ asset('build/manifest.js') }}"></script>
            <script src="{{ asset('build/layout.js') }}"></script>
            <script src="{{ asset('build/js/app/app.js') }}"></script>
        {% endblock %}
    </body>
</html>