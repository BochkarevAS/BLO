<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BIMBILO{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('build/layout.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>

    <body>
        <header class="header">
            <ul class="navi">
                {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('fos_user_security_logout') }}">Выход</a></li>
                {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}">Вход</a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}">Регистрация</a></li>
                {% endif %}
            </ul>
            {#<a href="{{ path('news_render') }}">Новости</a>#}
            {#<a href="{{ path('news_categories_render') }}">Категории новостей</a>#}
            {#<a href="{{ path('price_render') }}">Прайсы компании</a>#}
            <a href="{{ path('parts_render') }}">Запчасти</a>
            <a href="{{ path('tyres_render') }}">Шины</a>
            <a href="{{ path('drives_render') }}">Диски</a>
            <a href="{{ path('client_company_index') }}">Компании</a>
        </header>

        <div class="main-content">
            {% for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
            <script src="{{ asset('build/manifest.js') }}"></script>
            <script src="{{ asset('build/layout.js') }}"></script>
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>