<!DOCTYPE html>

<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BIMBILO{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('build/layout.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>

    <body>
        <header>
            <div id="navbar" class="container-fluid">
                <div class="container nav-fill w-100">
                    <nav class="navbar navbar-expand-md navbar-light" role="navigation">
                        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarContent">
                            <ul class="navbar-nav nav-fill w-100">
                                <li class="nav-item">
                                    <a href="{{ path('part_index') }}" role="button" class="btn btn-default">Запчасти</a>
                                </li>
                                <li class="nav-item">
                                    <div class="btn-group">
                                        <a href="{{ path('tyre_index') }}" role="button" class="btn btn-default">Шины</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <div class="btn-group">
                                        <a href="{{ path('drive_index') }}" role="button" class="btn btn-default">Диски</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <div class="btn-group">
                                        <a href="{{ path('client_company_show_all') }}" role="button" class="btn btn-default">Продавцы</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <div class="btn-group">
                                        {% if is_granted('ROLE_USER') %}
                                            <a href="{{ path('auth_user_personal') }}" role="button" class="btn btn-default">Личный кабинет</a>
                                        {% endif %}
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <div class="btn-group">
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('admin') }}" role="button" class="btn btn-default">Админка</a>
                                        {% endif %}
                                    </div>
                                </li>
                                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                                    <ul class="navbar-nav ml-auto">
                                        <li class="nav-item dropdown" style="margin-right: 75px;">
                                            <div class="navbar-collapse collapse">

                                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                                    <ul class="nav navbar-nav navbar-right">
                                                        <li class="drop-down" data-toggle="tooltip" data-placement="left" title="Добропожаловать ">
                                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                                                <span class="fa fa-user"></span>
                                                                <strong>{{ app.user.username }}</strong>
                                                                <span class="caret"></span>
                                                            </a>
                                                            <ul class="dropdown-menu">
                                                                <li>
                                                                    <a href="{{ path('fos_user_security_logout') }}" class="dropdown-item">Выход<span class="mini-dumbbell"></span></a>
                                                                </li>
                                                            </ul>
                                                        </li>
                                                    </ul>
                                                {% else %}
                                                    <ul class="nav navbar-nav navbar-right">
                                                        <li>
                                                            <a href="{{ path('fos_user_security_login') }}" class="dropdown"><span class="fa fa-sign-out"></span>Вход</a>
                                                        </li>
                                                        <li>
                                                            <div class="col-1"><a href="{{ path('fos_user_registration_register') }}">Регистрация</a></div>
                                                        </li>
                                                    </ul>
                                                {% endif %}
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>

        {{ mgilet_notification_render(app.user) }}

        <a href="{{ path('hwi_oauth_service_redirect', {'service': 'github'}) }}">
            <span>Github</span>
        </a>

        <br>

        <div class="main-content">
            {% for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </div>

        <footer id="footer" class="page-footer font-small unique-color-dark">

            <div style="background-color: #21d192;">
                <div class="container">

                    <div class="row py-4 d-flex align-items-center">
                        <div class="col-md-6 col-lg-5 text-center text-md-left mb-4 mb-md-0">
                            <h6 class="mb-0">Присоединяйтесь к нам в социальных сетях!</h6>
                        </div>

                        <div class="col-md-6 col-lg-7 text-center text-md-right">
                            <!-- Facebook -->
                            <a class="fb-ic">
                                <i class="fa fa-facebook white-text mr-4"> </i>
                            </a>
                            <!-- Twitter -->
                            <a class="tw-ic">
                                <i class="fa fa-twitter white-text mr-4"> </i>
                            </a>
                            <!-- Google +-->
                            <a class="gplus-ic">
                                <i class="fa fa-google-plus white-text mr-4"> </i>
                            </a>
                            <!--Instagram-->
                            <a class="ins-ic">
                                <i class="fa fa-instagram white-text"> </i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container text-center text-md-left mt-5">
                <div class="row mt-3">

                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <h6 class="text-uppercase font-weight-bold">Company name</h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>Here you can use rows and columns here to organize your footer content. Lorem ipsum dolor sit amet, consectetur
                            adipisicing elit.</p>
                    </div>

                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase font-weight-bold">Products</h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            <a href="#!">MDBootstrap</a>
                        </p>
                        <p>
                            <a href="#!">MDWordPress</a>
                        </p>
                        <p>
                            <a href="#!">BrandFlow</a>
                        </p>
                        <p>
                            <a href="#!">Bootstrap Angular</a>
                        </p>
                    </div>

                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase font-weight-bold">Useful links</h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            <a href="#!">Your Account</a>
                        </p>
                        <p>
                            <a href="#!">Become an Affiliate</a>
                        </p>
                        <p>
                            <a href="#!">Shipping Rates</a>
                        </p>
                        <p>
                            <a href="#!">Help</a>
                        </p>
                    </div>

                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <h6 class="text-uppercase font-weight-bold">Contact</h6>
                        <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                        <p>
                            <i class="fa fa-home mr-3"></i>г. Владивосток</p>
                        <p>
                            <i class="fa fa-envelope mr-3"></i>info@bimbilo.ru</p>
                        <p>
                            <i class="fa fa-phone mr-3"></i>8-914-706-71-71</p>
                        <p>
                            <i class="fa fa-print mr-3"></i>8-914-706-71-71</p>
                    </div>
                </div>
            </div>
            <div class="footer-copyright text-center py-3">© 2018 Copyright:
                <a href="https://bimbilo.ru/"> Bimbilo.ru</a>
            </div>
        </footer>

        {% block javascripts %}
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
            <script src="{{ asset('build/manifest.js') }}"></script>
            <script src="{{ asset('build/layout.js') }}"></script>
            <script src="{{ asset('build/js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>