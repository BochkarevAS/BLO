                                    {#<span class="text-success"> {{ engine }} </span>#}
                                {#{% endfor %}#}
                                {#/#}
                                {#{% for carcase in oem.parts.carcases %}#}
                                    {#{{ carcase }}#}
                                {#{% endfor %}#}
                            {#</td>#}
                            {#<td>#}
                                {#{{ oem.vendors.name }} / {{ oem.citys.name }}#}
                            {#</td>#}
                            {#<td>#}
                                {#{{ random(1500) }} руб.#}
                            {#</td>#}
                            {#<td>#}
                                {#{{ oem.updatedAt|date }}#}
                            {#</td>#}
                        {#</tr>#}
                    {#{% endfor %}#}
                </tbody>
            </table>

            <div class="navigator">
                {{ knp_pagination_render(parts) }}
            </div>
        {% endif %}

    </div>

{% endblock auth_user_content %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('build/app.js') }}"></script>

{% endblock %}