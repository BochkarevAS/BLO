{% extends 'layout.html.twig' %}

{% block auth_user_content %}

    <div class="container js-parts-module">

        {{ include('/parts/parts_form.html.twig') }}

        {% if parts %}
            <div class="navigator">
                {{ knp_pagination_render(parts) }}
            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Фото</th>
                        <th>Название / OEM</th>
                        <th>Расп. / Двиг. / Куз.</th>
                        <th>Продавец / Город</th>
                        <th>Цена</th>
                        <th>Дата</th>
                    </tr>
                </thead>
                <tbody>
                    {% for part in parts %}
                        <tr>
                            <td>
                                <img src="#" width="110" height="110">
                            </td>
                            <td>
                                {% if part.part %}
                                    {{ part.part.name }} /
                                {% endif %}
                                {% if part.oem %}
                                    {{ part.oem.name }}
                                {% endif %}
                                {% if part.brand %}
                                    на {{ part.brand.name }}
                                {% endif %}
                                {% if part.model %}
                                    {{ part.model.name }}
                                {% endif %}
                            </td>
                            <td>
                                {% if part.engine %}
                                    право / {{ part.engine.name }} / {{ part.carcase.name }}
                                {% endif %}
                            </td>
                            <td>
                                {% if part.vendor %}
                                    {{ part.vendor.name }} / {{ part.city.name }}
                                {% endif %}
                            </td>
                            <td>
                                {{ random(1500) }} руб.
                            </td>
                            <td>
                                {{ part.updatedAt|date }}
                            </td>
                        </tr>
                    {% endfor %}

                    {#{% for oem in oems %}#}
                        {#<tr>#}
                            {#<td>#}
                                {#{{ oem.parts.name }}  / {{ oem.name }} на#}
