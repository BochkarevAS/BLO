{% extends 'layout.html.twig' %}

{% block auth_user_content %}

    <div class="container js-parts-module">

        {{ include('/parts/parts_form.html.twig') }}

        {% if oems %}
            <div class="navigator">
                {{ knp_pagination_render(oems) }}
            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Название / OEM</th>
                        <th>Расп. / Двиг. / Куз.</th>
                        <th>Продавец / Город</th>
                        <th>Цена</th>
                        <th>Дата</th>
                    </tr>
                </thead>
                <tbody>
                    {% for oem in oems %}
                        <tr>
                            <td>
                                {% if oem.brand and oem.part %}
                                    {{ oem.part.name }} / {{ oem.name }} на {{ oem.brand.name }}
                                {% endif %}
                            </td>
                            <td>
                                {% if oem.engine and oem.carcase %}
                                    право / {{ oem.engine.name }} / {{ oem.carcase.name }}
                                {% endif %}
                            </td>
                            <td>
                                {% if oem.vendor and oem.city %}
                                    {{ oem.vendor.name }} / {{ oem.city.name }}
                                {% endif %}
                            </td>
                            <td>
                                {{ random(1500) }} руб.
                            </td>
                            <td>
                                {{ oem.updatedAt|date }}
                            </td>
                        </tr>
                    {% endfor %}

                    {#{% for oem in oems %}#}
                        {#<tr>#}
